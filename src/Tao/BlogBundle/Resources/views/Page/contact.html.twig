{% extends 'TaoBlogBundle::layout.html.twig' %}

{% block title %}Contact page{% endblock%}

{% block body %}
<head>
    <h1>Contact tao</h1>
</head>
    {% for flashMessage in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <p>Want to contact tao?</p>

    <form action="{{ path('contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}
        <input type="submit" value="Submit"/>
    </form>
{% endblock %}